{
    "install_p10k_omz": {
        "image": "mcr.microsoft.com/vscode/devcontainers/base:0-bullseye",
        "features": {
            "zsh-dotfiles": {
                "plugin-manager": "oh-my-zsh",
                "theme": "powerlevel10k",
                "with-plugins": true,
                "with-tools": true,
                "with-aliases": true
            }
        }
    },
    "install_starship_sheldon": {
        "image": "mcr.microsoft.com/vscode/devcontainers/base:0-bullseye",
        "features": {
            "zsh-dotfiles": {
                "plugin-manager": "sheldon",
                "theme": "starship",
                "with-plugins": true,
                "with-tools": true,
                "with-aliases": true
            }
        }
    },
    "install_p10k_theme_only": {
        "image": "mcr.microsoft.com/vscode/devcontainers/base:0-bullseye",
        "features": {
            "zsh-dotfiles": {
                "plugin-manager": "without",
                "theme": "powerlevel10k"
            }
        }
    }
}