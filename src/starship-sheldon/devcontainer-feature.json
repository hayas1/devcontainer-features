{
    "id": "starship-sheldon",
    "version": "0.0.1",
    "name": "starship-sheldon",
    "documentationURL": "https://github.com/hayas1/devcontainer-features/tree/main/src/starship-sheldon",
    "description": "Install starship and sheldon",
    "options": {
        "with-starship-config": {
            "type": "boolean",
            "default": "false",
            "description": "if false, use default config or mount ~/.config/starship.yaml"
        },
        "with-sheldon-config": {
            "type": "boolean",
            "default": "false",
            "description": "if false, use default config or mount ~/.config/sheldon/plugins.yaml"
        },
        "with-some-tools": {
            "type": "boolean",
            "default": "false",
            "description": "if false, do not install zsh, git, sudo, exa, ripgrep and so on"
        },
        "write-zshrc": {
            "type": "boolean",
            "default": "false",
            "description": "if false, do not write ~/.zshrc"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}